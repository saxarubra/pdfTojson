{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next"
    },
    {
      "src": "../pdf-backend/app.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "../pdf-backend/app.py"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ]
} 